<form class="form-horizontal">
  <fieldset>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label" >First name :</label>
      <div class="col-lg-10">
        <input class="form-control" disabled="" placeholder=<%= @user.first_name %> type="text">
      </div>
    </div>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Last name :</label>
      <div class="col-lg-10">
        <input class="form-control" disabled="" placeholder=<%= @user.last_name %> type="text">
      </div>
    </div>   
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Username :</label>
      <div class="col-lg-10">
        <input class="form-control" disabled="" placeholder=<%= @user.user_name %> type="text">
      </div>
    </div>      
    <div class="form-group">
      <label for="inputPassword" class="col-lg-2 control-label">Email :</label>
      <div class="col-lg-10">
