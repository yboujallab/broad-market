     </div> 
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
		  <%= link_to "Update", edit_user_path(current_user), :class => "btn btn-primary btn-sm" %>
      </div>
    </div>    
    </div>
  </fieldset>
